{
  "extends": "../../.tsconfigs/bundler/dom/library-monorepo.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@bin/*": ["./bin/*"],
      "@core/*": ["../../packages/core/src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../../packages/core" }]
}
