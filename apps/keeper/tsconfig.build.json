{
  "extends": "../../.tsconfigs/bundler/no-dom/library.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true,
    "noEmit": false,
    "moduleResolution": "Bundler",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@bin/*": ["./bin/*"]
    }
  },
  "exclude": ["node_modules", "./dist"],
  "include": ["src/**/*.ts", "bin/**/*.ts"],
  "references": [{ "path": "../../packages/core" }],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
