{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "//#dev:indexer": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["dist/**"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**",
        "package.json",
        "../../packages/contracts/worlds.json"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  },
  "ui": "tui"
}
