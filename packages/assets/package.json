{
  "name": "@primodiumxyz/assets",
  "version": "1.0.0",
  "description": "All assets used by Primodium: Empires.",
  "repository": {
    "type": "git",
    "url": "https://github.com/primodiumxyz/primodium-empires",
    "directory": "packages/assets"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "index.ts",
    "./**/*"
  ],
  "scripts": {
    "export": "pnpm export:sprites && pnpm export:vfx && pnpm export:audio",
    "export:audio": "audiosprite --channels 2 --output ./atlas/audio/atlas --path ./audio/ audio/**/*.ogg audio/*.ogg",
    "export:sprites": "node ./scripts/cli.mjs --project ./config-sprites.json",
    "export:vfx": "node ./scripts/cli.mjs --project ./config-vfx.json"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.0",
    "@primodiumxyz/engine": "workspace:*",
    "@types/ffmpeg": "^1.0.7",
    "@types/node": "^18.17.14",
    "@types/optimist": "^0.0.33",
    "audiosprite": "^0.7.2",
    "chalk": "^5.3.0",
    "free-tex-packer-cli": "^0.3.0",
    "free-tex-packer-core": "^0.3.4",
    "optimist": "^0.6.1",
    "prettier": "^3.3.3",
    "prettier-plugin-jsdoc": "^1.3.2",
    "ts-node": "^10.8.2",
    "typescript": "^5.5.2",
    "vite": "^3.2.3"
  }
}
